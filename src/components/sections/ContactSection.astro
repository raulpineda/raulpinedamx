---
import ContactBoxItem from "../ContactBoxItem.astro";
import Section from "../Section.astro";
const { contactText, contactOptions } = Astro.props;
---

<Section styles="p-1" ids="contact">
  <div
    class="flex min-h-[85vh] w-full basis-0 flex-col items-center gap-1 md:flex-row md:justify-between md:gap-[5rem]"
  >
    <div class="w-[100%] p-5 md:w-[60%]">
      <div>
        <h3
          class="text-[4rem] font-bold leading-[4rem] md:text-[6rem] md:leading-[8rem]"
        >
          Let's Connect
        </h3>
        <p
          class="mb-5 mt-5 text-justify leading-6 text-slate-700 md:mt-8 md:text-2xl md:leading-7"
        >
          {contactText}
        </p>
      </div>
    </div>
    <div class="flex w-[100%] flex-col justify-start gap-5 md:mr-5 md:w-[30%]">
      <h3 class="heading ml-4 font-semibold uppercase text-slate-600">
        Contact Me
      </h3>
      <div class="flex flex-col p-1">
        {
          contactOptions.map((contact: any) => (
            <ContactBoxItem contact={contact} />
          ))
        }
      </div>
    </div>
  </div>
</Section>
